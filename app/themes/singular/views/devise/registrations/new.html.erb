<% content_for :page_title do %>
  <h3><%= I18n.t('devise.registrations.new.sign_up') %></h3>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :email, autofocus: true %>
    <%= f.input :name %>
    <div class="select-image text-center">
      <%= f.attachinary_file_field :avatar if cloudinary_enabled? %>
      <%= f.file_field :profile_image, label: "Avatar" unless cloudinary_enabled? %>
    </div>
    <%= f.input :course_and_batch %>
    <%= f.input :student_number %>
    <%= f.input :title %>
    <% if @validatable %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %>
    <%= f.input :password, autocomplete: "off" %>
    <%= f.input :password_confirmation, autocomplete: "off" %>

    <%= f.button :button, "Sign Up".html_safe, class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing up..."} %>
<% end %>
